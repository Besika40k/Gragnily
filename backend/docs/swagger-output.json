              "schema": {
                "type": "object",
                "properties": {
                  "profile_picture": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional author profile picture"
                  },
                  "name": {
                    "type": "string",
                    "example": "J.K. Rowling"
                  },
                  "birth_year": {
                    "type": "integer",
                    "example": 1965
                  },
                  "nationality": {
                    "type": "string",
                    "example": "British"
                  },
                  "biography": {
                    "type": "string",
                    "example": "Famous author of Harry Potter."
